{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "noEmit": false,
    "emitDeclarationOnly": true, // 仅生成声明文件（满足复合项目规则）
    "declaration": true, // 复合项目必须开启
    "declarationMap": false, // 关闭map减小体积
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "paths": { "@/*": ["./src/*"] },
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./temp/declarations/app" // 声明文件输出到临时目录，不干扰打包
  }
}
